<footer>
    <Bar id="BarId1">
        <contentRight>
            <Button id="app_savebutton"
                    text="{i18n>save}"
                    icon="sap-icon://save"
                    type="Accept"                 
                    press="onSavePressed"
                    visible="{editModel>/editMode}"
            />
            <Button id="app_cancelbutton"
                    text="{i18n>cancel}"
                    icon="sap-icon://cancel"
                    type="Cancel"                 
                    press="onCancelPressed"
                    visible="{editModel>/editMode}"
            />
        </contentRight>
    </Bar>
</footer>

